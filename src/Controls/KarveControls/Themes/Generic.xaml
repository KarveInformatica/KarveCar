                                <ComboBoxItem IsSelected="True" x:Name="PART_FirstSalutationItem">
                                    <TextBlock Text="{Binding lmr, Source={StaticResource ResourceLanguage}}" />
                                </ComboBoxItem>
                                <ComboBoxItem x:Name="PART_SecondSalutationItem">
                                    <TextBlock Text="{Binding lmiss, Source={StaticResource ResourceLanguage}}"  />
                                </ComboBoxItem>
                                <ComboBoxItem x:Name="PART_ThirdSalutationItem">
                                    <TextBlock Text="{Binding lmrs, Source={StaticResource ResourceLanguage}}" />
                                </ComboBoxItem>
                                <ComboBoxItem x:Name="PART_ForthSalutationItem">
                                    <TextBlock Text="{Binding ldr, Source={StaticResource ResourceLanguage}}" />
                                </ComboBoxItem>
                                <ComboBoxItem>
                                    <TextBox  Width="50" />
                                </ComboBoxItem>
                            </ComboBox>
                            <Syncfusion:SfTextBoxExt x:Name="PART_DriverFirstName" Grid.Column="2" 
                                     Margin="0,0,0,10"
