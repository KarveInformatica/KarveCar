    <Style TargetType="{x:Type local:EmailBox}">
        <Style.Resources>
            <ObjectDataProvider x:Key="ResourceLanguage" 
                                ObjectType="{x:Type karveLocale:LocaleResourceFactory}" 
                                MethodName="GetResourceLanguage">
            </ObjectDataProvider>
        </Style.Resources>
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="200"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Padding" Value="4,0,0,0"/>


        <Setter Property="Template">
            <Setter.Value>

                <ControlTemplate TargetType="{x:Type local:EmailBox}">
                    <StackPanel Orientation="Horizontal">
                        <local:DataField x:Name="EmailField" 
                                                     DataObject="{Binding RelativeSource={RelativeSource TemplatedParent},Path=DataObject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     DataSourcePath="{Binding RelativeSource={RelativeSource TemplatedParent},Path=DataSourcePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     TextContentWidth="200"
                                                     LabelTextWidth="0"
