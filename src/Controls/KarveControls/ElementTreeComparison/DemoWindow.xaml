<Window
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Element Tree Comparison"
  Width="300" Height="300"
  WindowStartupLocation="CenterScreen"
  >
  <StackPanel Margin="4">

    <TextBlock Margin="4" Background="LightBlue">
      Hold Ctrl and left-click to display logical tree
      <LineBreak />
      Hold Ctrl and right-click to display visual tree
      <LineBreak />
      <InlineUIContainer>
        <ComboBox Padding="4" SelectedIndex="0">I am in the TextBlock!</ComboBox>
      </InlineUIContainer>
    </TextBlock>

    <Button Margin="4" Padding="4">Clear the console window</Button>

    <ListBox Margin="4" xmlns:sys="clr-namespace:System;assembly=mscorlib">
      <sys:Int32>1</sys:Int32>
      <sys:Double>2.22</sys:Double>
      <sys:String>Three</sys:String>

      <Border BorderBrush="Black" BorderThickness="1">
        <CheckBox Padding="0,0,8,0">
          <TextBlock Background="LightBlue">
            I am in the ListBox
          </TextBlock>
        </CheckBox>
      </Border>
    </ListBox>

  </StackPanel>
</Window>