-->
                    </syncfusion:SfDataGrid>

                    <syncfusion:SfDataPager x:Name="sfDataPager"
                           Grid.Row="1"
                           AutoEllipsisMode="After"
                           NumericButtonCount="10"
                           AutoEllipsisText="...etc" 
                           PageSize="16" 
                           Source="{Binding SourceView}" Grid.ColumnSpan="3" />

                </Grid>
